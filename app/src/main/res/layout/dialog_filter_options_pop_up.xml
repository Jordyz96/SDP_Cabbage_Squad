<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvFilterBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter By"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupFilterOptions"
        android:buttonTint="@color/colorPrimaryDark">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Status"
            android:buttonTint="@color/colorPrimaryDark"
            android:id="@+id/radioBtnStatus"/>

        <RadioButton
            android:id="@+id/radioBtnDate"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Date" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:buttonTint="@color/colorPrimaryDark"
            android:id="@+id/radioBtnDateRange"
            android:text="Date Range" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <Button
            android:id="@+id/filterCancelBtnFilterOption"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp"
            android:text="Cancel"
            android:background="@android:color/transparent"
            />

        <Button
            android:id="@+id/filterOkBtnFilterOption"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>