<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cabbage.sdpjournal.MainActivity">

    <Button
        android:id="@+id/bSettings"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/addJournalBtn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Add Journal"
        app:layout_constraintBottom_toTopOf="@+id/bSettings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_below="@+id/bSettings"
        android:layout_alignLeft="@+id/bSettings"
        android:layout_alignStart="@+id/bSettings" />

    <GridView
        android:id="@+id/gvJournalView"
        android:layout_width="368dp"
        android:layout_height="383dp"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        app:layout_constraintBottom_toTopOf="@+id/addJournalBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_below="@+id/addJournalBtn"
        android:layout_alignLeft="@+id/addJournalBtn"
        android:layout_alignStart="@+id/addJournalBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </GridView>

</RelativeLayout>
